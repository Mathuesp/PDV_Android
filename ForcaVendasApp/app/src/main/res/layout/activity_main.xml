<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastros"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="25dp">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Cadastro Clientes"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/btClientes"/>

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Cadastro EndereÃ§o"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/btEndereco"/>

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Cadastro Item"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/btItem"/>

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:text="Cadastro Pedido"
            android:id="@+id/btCadastroPedido"/>

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:text="Cadastro Item Pedido"
            android:id="@+id/btCadastroItemPedido"/>

    </LinearLayout>

</LinearLayout>